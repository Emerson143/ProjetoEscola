				System.out.println("===========================================");
				System.out.println("=ENTRE COM SUA OPÇÃO SUA OPÇÃO DE USUARIO =");
				System.out.println("===========================================");
				
				
				while (laco) {
					
					System.out.println();
					System.out.println("******************************************");
